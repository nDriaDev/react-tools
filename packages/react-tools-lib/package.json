{
	"name": "@ndriadev/react-tools",
	"description": "A React library of hooks, components and utils ready to use",
	"private": false,
	"version": "0.0.0",
	"type": "module",
	"files": [
		"./dist"
	],
	"main": "./dist/react-tools.umd.js",
	"module": "./dist/react-tools.es.js",
	"types": "./dist/index.d.ts",
	"exports": {
		".": {
			"require": "./dist/react-tools.umd.js",
			"import": "./dist/react-tools.es.js",
			"types": "./dist/index.d.ts"
		}
	},
	"sideEffects": false,
	"scripts": {
		"build": "tsc && vite build",
		"readme": "node scripts/generateREADME.js",
		"lint": "eslint . --ext ts,tsx --report-unused-disable-directives --max-warnings 0",
		"lint:fix": "eslint --fix 'src/**/*.{jsx,ts,tsx}'",
		"release:patch": "pnpm version patch",
		"release:minor": "pnpm version minor",
		"release:major": "pnpm version major",
		"postversion": "pnpm --filter react-tools-demo run build && pnpm --filter @ndriadev/react-tools run readme && git add . && git commit -m '[UPDATE] version' && git push && git push origin --tags && pnpm --filter @ndriadev/react-tools publish --access public",
		"preview": "vite preview",
		"prepare": "pnpm run build",
		"prepublishOnly": "pnpm run lint"
	},
	"peerDependencies": {
		"react": "^16.8.0 || ^18.x",
		"react-dom": "^16.8.0 || ^18.x"
	},
	"devDependencies": {
		"@types/node": "^20.6.0",
		"@types/react": "^18.2.15",
		"@types/react-dom": "^18.2.7",
		"@typescript-eslint/eslint-plugin": "^6.0.0",
		"@typescript-eslint/parser": "^6.0.0",
		"@vitejs/plugin-react": "^4.0.3",
		"eslint": "^8.45.0",
		"eslint-plugin-react-hooks": "^4.6.0",
		"eslint-plugin-react-refresh": "^0.4.3",
		"parse-numeric-range": "^1.3.0",
		"react": "^18.2.0",
		"react-dom": "^18.2.0",
		"typescript": "^5.0.2",
		"vite": "^4.4.5",
		"vite-plugin-dts": "^3.5.3",
		"vite-plugin-linter": "^2.0.5",
		"vite-tsconfig-paths": "^4.2.1"
	},
	"keywords": [
		"react",
		"component",
		"components",
		"hook",
		"hooks",
		"tools",
		"lazy",
		"react component",
		"react components",
		"react-component",
		"react-components",
		"react-hook",
		"react hook",
		"react hooks",
		"react-hooks",
		"react-custom-hook",
		"react-custom-hooks",
		"react custom hook",
		"react custom hooks",
		"react utils",
		"react util",
		"react lazy"
	],
	"repository": {
		"type": "git",
		"url": "git+https://github.com/nDriaDev/react-tools"
	},
	"author": {
		"name": "Andrea Cosentino",
		"email": "andreacosentino.work@gmail.com",
		"url": "https://github.com/nDriaDev/"
	},
	"readmeFilename": "README.md",
	"bugs": {
		"url": "https://github.com/nDriaDev/react-tools/issues"
	},
	"homepage": "https://github.com/nDriaDev/react-tools",
	"license": "MIT"
}
