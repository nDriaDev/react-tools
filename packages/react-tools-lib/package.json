{
	"name": "@ndriadev/react-tools",
	"description": "A React library of hooks, components, utils and types ready to use",
	"private": false,
	"version": "1.11.0",
	"type": "module",
	"files": [
		"./dist"
	],
	"main": "./dist/react-tools.cjs",
	"module": "./dist/react-tools.js",
	"types": "./dist/react-tools.d.ts",
	"exports": {
		".": {
			"require": "./dist/react-tools.cjs",
			"import": "./dist/react-tools.js",
			"types": "./dist/react-tools.d.ts"
		},
		"./hooks": {
			"require": "./dist/hooks.cjs",
			"import": "./dist/hooks.js",
			"types": "./dist/hooks.d.ts"
		},
		"./components": {
			"require": "./dist/components.cjs",
			"import": "./dist/components.js",
			"types": "./dist/components.d.ts"
		},
		"./utils": {
			"require": "./dist/utils.cjs",
			"import": "./dist/utils.js",
			"types": "./dist/utils.d.ts"
		}
	},
	"sideEffects": false,
	"scripts": {
		"build": "tsc && vite build && pnpm run readme",
		"readme": "node scripts/generateREADME.js",
		"lint": "eslint . --ext ts,tsx --report-unused-disable-directives --max-warnings 0",
		"lint:fix": "eslint --fix 'src/**/*.{jsx,ts,tsx}'",
		"release:patch": "pnpm version patch",
		"release:minor": "pnpm version minor",
		"release:major": "pnpm version major",
		"postversion": "git add . && git commit -m '[UPDATE] version' && git push --follow-tags && pnpm publish --access public",
		"preview": "vite preview",
		"prepare": "pnpm run build",
		"prepublishOnly": "pnpm run lint"
	},
	"peerDependencies": {
		"react": ">=16.8.0",
		"react-dom": ">=16.8.0"
	},
	"devDependencies": {
		"@eslint/js": "^9.38.0",
		"@types/node": "^20.11.16",
		"@types/react": "^18.2.55",
		"@types/react-dom": "^18.2.19",
		"@vitejs/plugin-react": "^4.2.1",
		"eslint": "^9.38.0",
		"eslint-plugin-react-hooks": "^7.0.0",
		"eslint-plugin-react-refresh": "^0.4.24",
		"react": "^18.2.0",
		"react-dom": "^18.2.0",
		"typescript": "^5.9.3",
		"typescript-eslint": "^8.46.2",
		"vite": "^5.4.21",
		"vite-plugin-dts": "^4.5.4",
		"vite-plugin-linter": "^3.1.0",
		"vite-tsconfig-paths": "^5.1.4"
	},
	"keywords": [
		"react",
		"component",
		"components",
		"hook",
		"hooks",
		"tools",
		"lazy",
		"react tools",
		"react-tools",
		"react component",
		"react components",
		"react-component",
		"react-components",
		"react-hook",
		"react hook",
		"react hooks",
		"react-hooks",
		"react-custom-hook",
		"react-custom-hooks",
		"react custom hook",
		"react custom hooks",
		"react utils",
		"react util",
		"react lazy"
	],
	"repository": {
		"type": "git",
		"url": "git+https://github.com/nDriaDev/react-tools"
	},
	"author": {
		"name": "Andrea Cosentino",
		"email": "andreacosentino.work@gmail.com",
		"url": "https://github.com/nDriaDev/"
	},
	"readmeFilename": "README.md",
	"bugs": {
		"url": "https://github.com/nDriaDev/react-tools/issues"
	},
	"homepage": "https://react-tools.ndria.dev",
	"license": "MIT"
}
